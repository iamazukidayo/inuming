<div class="container">
  <div class="row">
    <div class="mx-auto offset-lg-2 mt-5">


    <h4>『　新規会員登録　』</h4>
    <p></p>

   <%= form_with model: @user, url: registration_path(resource_name) do |f| %>
     <%= render "public/shared/error_messages", resource: resource %>


    <table class="table">
      <tbody>
        <tr>
          <td class="field">
            <th><%= f.label :"ユーザー名" %><br></th>
            <td><%= f.text_field :name %></td>
          </td>
        </tr>

        <tr>
          <td class="field">
            <th><%= f.label :"メールアドレス" %><br /></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>

        <tr>
          <td class="field">
            <th><%= f.label :"パスワード" %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> 文字以上)</em>
                <% end %><br />
            </th>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>

        <tr>
          <td class="field">
            <th><%= f.label :"パスワード（確認 )" %><br /></th>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            <td></td>
          </td>
        </tr>

        <tr>
          <td class="actions">
            <td><%= f.submit "新規登録", class: 'btn btn-sm btn-success' %></td>
          <td></td>
        </tr>
    </table>

    <tfoot>
        <tr>
          <td>
            ＊会員の方は<%= link_to "こちら", user_session_path %>からログインしてください。
          </td>
        </tr>
    </tfoot>

      <% end %>
       <!--%= render "public/shared/links" %>-->
    </div>
  </div>
</div>
