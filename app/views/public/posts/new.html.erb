<div class="text-center mt-5">
  <h2>＊　投稿ページ　＊</h2>

  <div class="container">
    <% if @post.errors.any? %>
      <div class="alert alert-danger">
        <%= pluralize(@post.errors.count, "エラー") %>が発生しました:
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
      <div class="row">
        <div class="mx-auto offset-lg-2 mt-5">
    <%= form_with model: @post, local: true, html: { multipart: true } do |f| %>
      <table class="table mt-5">
        <tbody>
          <tr>
            <th>タイトル（犬種入力してください）</th>
            <td><%= f.text_field :title, placeholder: "[例：トイプードル]", class: 'form-control' %></td>
          </tr>
          <tr>
            <th>写真</th>
            <td>
              <%= f.file_field :images, multiple: true, accept: 'image/*', class: 'form-control' %>
              <td><button type="button" id="add-file-field" class="btn btn-secondary">画像を追加</button></td>
            </td>
          </tr>
          <tr>
            <th>説明</th>
            <td class="form-group">
              <%= f.text_area :body, rows: '10', class: 'form-control', placeholder: "[#トリミングサロン名、スタイル]" %>
            </td>
          </tr>
        </tbody>
      </table>
      <%= f.submit "投稿", class: 'btn btn-sm btn-success' %>
    <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    document.getElementById("add-file-field").addEventListener("click", function() {
      const fileField = document.querySelector("input[type='file']");
      const newFileField = fileField.cloneNode();
      fileField.parentNode.insertBefore(newFileField, fileField.nextSibling);
    });
  });
</script>
