<div class="container mt-5">
  <div class="row">
    <div class="mx-auto offset-lg-2 mt-5">

      <h3>＊　投稿ページ　＊</h3>

      <% if @post.errors.any? %>
        <div class="alert alert-danger">
          <%= pluralize(@post.errors.count, "エラー") %>が発生しました:
          <ul>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>


      <%= form_with model: @post, local: true do |f| %>
　　　<table class = "table">
        <tbody>

          <tr>
            <th>写真</th>
            <td><%= f.file_field :images, multiple: true, accept: "image/*" %></td>
          </tr>


          <tr>
            <th>タイトル（犬種入力してください）</th>
            <td><%= f.text_field :title, placeholder:"[例：トイプードル]"%></td>
          </tr>

          <tr>
            <th>説明</th>
            <td class="form-group">
              <%= f.text_area :body, rows: '10', class: 'form-control', placeholder:"[#トリミングサロン名、スタイル]" %>
            </td>
          </tr>

        </tbody>
      </table>


        <%= f.submit "投稿", class: 'btn btn-sm btn-success' %>

      <% end %>
    </div>
  </div>
</div>
