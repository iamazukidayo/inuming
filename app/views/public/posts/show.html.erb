<div class="container mt-5">
  <h3>＊　投稿詳細画面　＊</h3>
  <div class = "row" >
    <div class = "col-xs-6">
      <p class = "col-xs-2">
        <%= link_to user_path(@post.user_id) do %>
          <%= @post.user.name %>
        <% end %>
      </p>
    </div>
  </div>


    <div class="row mt-3">
      <div class="col-xs-6">
        <%= image_tag @post.get_image(450, 400) %>
        <p class = "col-xs-2">投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
        <p class = "col-xs-4">
          <%= link_to "編集", edit_post_path(@post.id), class:'btn btn-sm btn-success' %>
        </p>
      </div>

      <div class="col-1"></div>
      <div class="col-md-4">
        <h4><%= @post.title %></h4>
        <h5><%= @post.body %></h5>

    </div>
  </div>
</div>
