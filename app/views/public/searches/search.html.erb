<div class="container px-5 px-sm-0 mt-5">
  <div class='col-md-10 offset-md-1'>
    <% if @range == "User" %>
      <h2>検索結果<i class="fa-solid fa-magnifying-glass"></i> "<%= @word %>"</h2>
      <div class="row mt-5">
        <% @users.each do |user| %>
          <div class="col-md-3 mb-4">
            <div class="card h-100">
              <%= image_tag user.get_profile_image(100, 100), class: "card-img-top" %>
                <div class="card-body">
                  <h5 class="card-title"><%= user.name %></h5>
                  <%= link_to user_path(user), class: "btn btn-sm btn-light" do %>
                    <i class="fa-solid fa-check"></i>　view
                  <% end %>
                </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <h2>検索結果<i class="fa-solid fa-magnifying-glass"></i> "<%= @word %>"</h2>
      <div class="row mt-5">
        <% @posts.each do |post| %>
          <div class="col-md-3 mb-4">
            <div class = "card h-100">
              <%= image_tag url_for(post.images.first), style: "width: 100px; height: 100px; object-fit: cover;" %>
                <div class="card-body">
                  <h5 class="card-title"><%= post.title %></h5>
                  <p class="card-text"><%= post.body.truncate(15) %></p>
                  <%= link_to post_path(post), class: "btn btn-sm btn-light" do %>
                    <i class="fa-solid fa-check"></i>　view
                  <% end %>
                </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
