<div class = "container mt-5">

  <% if flash.now[:user_update] %>
    <div class="alert alert-success">
      <%= flash.now[:user_update] %>
    </div>
  <% elsif flash.now[:signup] %>
    <div class="alert alert-success">
      <%= flash.now[:signup] %>
    </div>
  <% end %>

  <div class = "row">
    <div class="col-md-5">

      <h3>＊　マイページ　＊</h3>

      <p><%= image_tag @user.get_profile_image(250, 200), style: "width: 250px; height: 200px; object-fit: cover;" %></p>
      <table class = "table">
        <tbody>
          <tr>
            <th>ユーザー名</th>
            <td>
                <%= @user.name %>
            </td>
          </tr>

          <tr>
            <th>自己紹介</th>
            <td><%= @user.introduction %></td>
          </tr>

          <tr>
            <th>フォロー</th>
            <td></td>
          </tr>

          <tr>
            <th>フォロワー</th>
            <td></td>
          </tr>

          <tr>
            <td>
                <% if @user.id == current_user.id %>
                  <%= link_to "編集", edit_user_path(current_user.id), class: 'btn btn-sm btn-success' %>
                <% end %>
            </td>
            <td>
              <%= link_to liked_posts_user_path(@user), class: 'btn  btn-light' do %>
                <i class="fa-solid fa-heart" style="color: #f91515;"></i>　いいね一覧
              <% end %>
            </td>
          </tr>

      　</tbody>
    　</table>
    </div>


    <div class="col-md-7 mt-5">
      <div class="row">
        <% @posts.each do |post| %>
            <div class="col-md-4 mb-4">
              <%= link_to post_path(post) do %>
                <div class="card card-fixed-size">
                <%= image_tag post.get_image(200, 250), style: "object-fit: cover;" , class: 'card-img-top' %>
                  <div class="card-body">

                  <div id="like_buttons_<%= post.id %>">
                    <%= render "public/likes/likes", post: post %>
                  </div>


                    <div><%= post.comments.count %> コメント</div>
                    <small class="card-title"><%= post.title %></small>
              <!--<p class="card-text">%= post.body %></p>-->
                  </div>
                </div>
              <% end %>
            </div>
        <% end %>
    </div>
  </div>
</div>

