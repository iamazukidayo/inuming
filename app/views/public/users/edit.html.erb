<div class="container mt-5">
 <div class="row">
  <div class="mx-auto offset-lg-2 mt-5">
    <h3>＊　プロフィール編集　＊</h3>
      <%= form_with model: @user do |f| %>
      <table class="table">
        <tbody>
          <tr>
            <td class="form-group">
              <td><lavel for="user_name">Name</lavel></td>
              <td><%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"name" %></td>
            </td>
          </tr>
          <tr>
              <td class="form-group">
                <td><label for="user_image">Image</label></td>
                <td><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></td>
              </td>
          </tr>
          <tr>
            <td class="form-group">
              <td><label for="user_introduction">Introduction</label></td>
               <td><%= f.text_area :introduction, autofocus: true, id:"user_introduction", placeholder:"自己紹介" %></td>
            </td>
          </tr>
          <tr>
            <td class="actions">
              <td><%= f.submit "保存", class: 'btn btn-sm btn-success' %></td>
              <td><%= link_to "退会", check_users_path, class: 'btn btn-sm btn-danger' %></td>
            </td>
          </tr>
        </tbody>
      </table>
      <% end %>
   </div>
  </div>
</div>
