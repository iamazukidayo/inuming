<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class="mx-auto mt-5">

    <div class="text-center">
      <h4><i class="fa-regular fa-face-smile fa-bounce"></i> フォロワー</h4>
    </div>

          <table class= 'table'>
            <thead>
              <tr>
                <th>image</th>
                <th></th>
                <th>name</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% if @users.exists? %>
                <% @users.each do |user| %>
          <table class= 'table'>
              <tr>
                <td><%= image_tag user.get_profile_image(100,100),  class: 'mr-3 rounded-circle' %></td>
                <td></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user.id), class: "btn btn-sm btn-dark" %></td>
              </tr>
            </tbody>
          </table>
        <% end %>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>

    </div>
  </div>
</div>
