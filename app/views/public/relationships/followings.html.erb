<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class="mx-auto mt-5">

      <div class="text-center">
        <h2><i class="fa-solid fa-face-smile fa-bounce"></i> フォロー</h2>
      </div>

      <% if @users.exists? %>
        <% @users.each do |user| %>
          <table class='table'>
            <thead>
              <tr>
                <th>image</th>
                <th></th>
                <th>name</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= image_tag user.get_profile_image(100,100),  class: 'mr-3 rounded-circle' %></td>
                <td></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user.id) %></td>
              </tr>
            </tbody>
          </table>
      <% end %>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </div>
  </div>
</div>
