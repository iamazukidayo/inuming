<div class="container">

    <% if flash.now[:alert] %>
      <div class="alert alert-danger">
        <%= flash.now[:alert] %>
      </div>
    <% end %>


  <div class="row">
    <div class="mx-auto offset-lg-2 mt-5">
      <h4>『　ログイン　』</h4>

      <%= form_with model: @user, url: user_session_path do |f| %>

      <table class="table">
        <tbody>
          <tr>
            <td class="field">
              <th><%= f.label :"ユーザー名" %><br /></th>
              <td><%= f.text_field :name %></td>
            </td>
          </tr>

          <tr>
            <td class="field">
              <th><%= f.label :"パスワード" %><br /></th>
              <td><%= f.password_field :password, autocomplete: "current-password" %></td>
            </td>
          </tr>




          <tr>
            <% if devise_mapping.rememberable? %>
              <td class="field">
               <td><%= f.check_box :remember_me %>
                   <%= f.label :remember_me %></td>
              </td>
              <td></td>
            <% end %>
          </tr>

          <tr>
            <td class="actions"></td>
              <td><%= f.submit "ログイン", class: 'btn btn-sm btn-primary' %></td>
            </td>
            <td></td>
          </tr>
        </tbody>
      </table>
      <% end %>


      <tfoot>
        <tr>
          <td>
            ＊　会員登録がお済みでない方は<%= link_to "こちら", new_user_registration_path %>
          </td>
        </tr>
      </tfoot>
<!--%= render "public/shared/links" %>-->
    </div>
  </div>
</div>
