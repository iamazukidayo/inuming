    <main>
      <%= yield %>
    </main>

    <footer>
      <div class="container-fluid mt-5">
        <div class="row align-items-center border-top">
          <div class="col-12 d-flex">
            <i class="fa-solid fa-scissors fa-2xl"></i>
          </div>
        </div>
