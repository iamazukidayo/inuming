          <!--%= link_to "投稿一覧", admin_path, class: "btn btn-light mt-auto mr-2 mb-auto ml-4" %>-->

          <!--%= link_to "コメント一覧", admin_genres_path, class: "btn btn-light mt-auto mr-2 mb-auto ml-4 " %>-->

          <!--%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-light mt-auto mr-2 mb-auto ml-4 " %>-->

          <% if user_signed_in? %>

          <div class = "col-2" >
              <%= link_to root_path do %>
                <%= image_tag 'inuming.png', size: '180x125' %>
              <% end %>
          </div>
            <div class="col-10">

              <div class="d-flex justify-content-end flex-wrap">
                <!--<div class="mr-2"></div>-->
                  <%= render "public/homes/search", user: @user %>
                <div class= "mr-2"></div>
                <%= link_to destroy_user_session_path, method: :delete, class: "btn btn-light" do %>
