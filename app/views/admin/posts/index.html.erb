<div class="container mt-5">
  <div class="row">
    <div class="mx-auto">
      <div class="text-center">
        <h2>＊ 投稿一覧 ＊</h2>
      </div>

      <table class="table mt-5">
        <thead>
          <tr>
            <th>投稿写真</th>
            <th>ユーザー名</th>
            <th>タイトル</th>
            <th>説明</th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= image_tag post.get_image(100, 100), class: 'style: "width: 100px; height: 100px; object-fit: cover;' %></td>
              <td><%= post.user.name %> </td>
              <td><small><%= post.title %></small></td>
              <td><small><%= post.body %></small></td>
              <td><%= link_to "投稿確認", post_path(post), class:"btn btn-sm btn-dark" %></td>
              <td><%= link_to "削除", admin_post_path(post), method: :delete, data: { confirm: '本当に削除しますか？' }, class:"btn btn-sm btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
